@model IEnumerable<HealthProvisor.Models.Consultation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<style>
    .page-title-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .page-title {
        font-size: 38px;
        font-weight: bold;
        color: #a2b6c99c;
        padding: 10px;
        border-radius: 5px;
        display: inline-block;
    }

    .table {
        background-color: #2458aa;
        color: white;
        font-weight: bold;
    }

    .thead-dark th {
        background-color: #2458aa !important;
        color: white !important;
        font-weight: bold;
    }

    .table-container th,
    .table-container td {
        padding: 8px;
        border: 1px solid #2458aa;
        text-align: center; 
    }

    .table-container th {
        background-color: #2458aa;
        color: white;
        font-weight: bold;
    }

    .table-container {
        margin: auto;
        overflow-x: auto;
    }

</style>

<div class="page-title-container">
    <h1 class="page-title">Consultations</h1>
</div>
<div class="table-container">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-dark">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Full Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Notes
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in (List<Consultation>)(ViewBag.Consultations))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)<br />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patient.User.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patient_Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patient_Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>

                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ConsultationID">Edit</a>
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ConsultationID">Details</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ConsultationID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>