@model HealthProvisor.Models.Visa

@{
    ViewData["Title"] = "Delete";
}
@{
    var visiblePart = "";
    var visaNumber = ViewBag.VisaNumber;
    if (visaNumber != null)
    {
        visiblePart = new string('*', visaNumber.Length - 4) + visaNumber.Substring(visaNumber.Length - 4, 4);
    }
}
<style>
    .blue-background {
        background-color: #cdcae8;
    }
</style>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="blue-background">Patient Name</th>
                    <td>@Html.DisplayFor(model => model.Patient.User.FirstName) @Html.DisplayFor(model => model.Patient.User.LastName)</td>
                </tr>
                <tr>
                    <th class="blue-background">CVC</th>
                    <td>@Html.DisplayFor(model => model.CVC)</td>
                </tr>
                <tr>
                    <th class="blue-background">Visa Number</th>
                    <td><input id="VisaNumber" type="text" class="form-control" placeholder="Visa Number" value="@visiblePart" readonly /></td>
                </tr>
                <tr>
                    <th class="blue-background">Expiration Date</th>
                    <td>@Html.DisplayFor(model => model.ExpDate)</td>
                </tr>
                <tr>
                    <th class="blue-background">Transaction Date</th>
                    <td>@Html.DisplayFor(model => model.TransactionDate)</td>
                </tr>
            </tbody>
        </table>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VisaId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back to List</a>
    </form>
</div>
